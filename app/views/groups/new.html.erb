<%= render "shared/header", title: 'Add New Group' %>

<div class="form-container mt-3 w-100">
    <%= form_with model: @group, class: "d-flex flex-column justify-content-center h-100", local: true do |form| %>
      <div class="field mb-3 w-85 d-flex justify-content-center">
        <%= form.text_field :name, placeholder: "Add A New Group", class: "form-control" %>
      </div>

      <div class="field mb-3 w-100 p-2 d-flex justify-content-center">
        <%= form.select :icon, options_for_select(@options, selected: @group.icon), { prompt: "Select an icon" } %>
      </div>

      <div class="field mt-5 w-100 add p-3 d-flex justify-content-center">
        <%= form.submit "Create Group", class: "btn border border-white border-2 fs-5 fw-bold text-white w-25" %>
      </div>
    <% end %>
</div>